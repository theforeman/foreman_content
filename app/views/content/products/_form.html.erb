<%= javascript 'content/application.js' %>
<%= form_for @product, :url => (@product.new_record? ? products_path : product_path(:id => @product.id)) do |f| %>
  <%= base_errors_for @product %>
  <%= text_f f, :name %>
  <%= text_f f, :description %>
  <%= select_f f, :provider_id, Content::Provider.all, :id, :name, {:label => _("Provider")} %>

  <%= submit_or_cancel f %>
<% end %>
